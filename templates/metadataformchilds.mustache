{{!
    @template mod_sharedresource/metadataformchilds

    Classes required for JS:
    * none

}}
<!-- metadataformchilds -->
{{#childs}}

{{#iscategory}}
    <tr {{{nodeclass}}}>
        <td width="30%" align="left" style="padding-left:{{indentsize}}px">
            <b>&nbsp;{{fieldname}}</b>
        </td>
{{/iscategory}}
{{^iscategory}}
    <tr>
        <td width="30%" align="left" style="padding-left:{{indentsize}}px">
            &nbsp;{{fieldname}}
        </td>
{{/iscategory}}

        <td class="mtdsetting">
            <input id="{{skw}}" class="{{isparentclass}} {{sparentclassw}} {{namespace}}-system-write mtd-check" type="checkbox" name="{{cskw}}" {{{scheckedw}}} value="1" {{{sdisabledw}}} /> W / 
            <input id="{{skr}}" class="{{isparentclass}} {{sparentclassr}} {{namespace}}-system-read mtd-check" type="checkbox" name="{{cskr}}" {{{scheckedr}}} value="1" {{{sdisabledr}}} /> R
        </td>

        <td class="mtdsetting">
            <input id="{{ikw}}" class="{{isparentclass}} {{iparentclassw}} {{namespace}}-indexer-write mtd-check" type="checkbox" name="{{cikw}}" {{{icheckedw}}} value="1" {{{idisabledw}}} /> W /
            <input id="{{ikr}}" class="{{isparentclass}} {{iparentclassr}} {{namespace}}-indexer-read mtd-check" type="checkbox" name="{{cikr}}" {{{icheckedr}}} value="1" {{{idisabledr}}} /> R
        </td>

        <td class="mtdsetting">
            <input id="{{akw}}" class="{{isparentclass}} {{aparentclassw}} {{namespace}}-author-write mtd-check" type="checkbox" name="{{cakw}}" {{{acheckedw}}} value="1" {{{adisabledw}}} /> W / 
            <input id="{{akr}}" class="{{isparentclass}} {{aparentclassr}} {{namespace}}-author-read mtd-check" type="checkbox" name="{{cakr}}" {{{acheckedr}}} value="1" {{{adisabledr}}} /> R
        </td>

        <td class="mtdsetting">
            <input id="{{mk}}" class="{{isparentclass}} {{mparentclassr}} {{namespace}}-mandatory mtd-check" type="checkbox" name="{{cmk}}" {{{mchecked}}} value="1" {{{mdisabled}}} />
        </td>

    {{#haswidget}}
            <td class="mtdsetting">
                <input id="{{wk}}" class="mtd-widget {{wparentclass}}" type="checkbox" name="{{wn}}" {{{wchecked}}} value="1" {{{wdisabled}}} />
            </td>
    {{/haswidget}}
    {{^haswidget}}
            <td class="mtdsetting"></td>
    {{/haswidget}}

</tr>

{{#haschilds}}
{{> mod_sharedresource/metadataformchilds}}
{{/haschilds}}

{{/childs}}
<!-- /metadataformchilds -->