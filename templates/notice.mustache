{{!
    @template mod_sharedresource/notice

    Used when a resource is setup as popuped but accessed directly

    Classes required for JS:
    * mod/sharedresource/amd/view.js

}}
<!-- notice -->
<center>
<div id="mtd-form-container" align="center">
    <div align="center" id="mtd-form-schema">
        {{{metadatadescrstr}}}: {{schema}}
    </div>

    {{> mod_sharedresource/tabs}}

    <div id="mtd-form-content" style="margin-right: auto; margin-left: auto">
        {{> mod_sharedresource/metadatapanel }}

        {{^hidemetadatadesc}}
        <div id="id-tab-99" class="off mtd-content">

            <div class="mtd-description-panel">
                <h2>{{{dmusestr}}} {{namespace}}</h2>

                <h3>{{{dmdescriptionstr}}}</h3>

                <fieldset style="margin-right: auto; margin-left: auto">
                    {{{standarddescriptionstr}}}
                </fieldset>
            </div>
        </div>
        {{/hidemetadatadesc}}
    </div>

    <br/>

    <div align="center">
    </div>
</div>
</center>

<!-- /notice -->