{{!
    @template mod_sharedresource/accessrules

    Classes required for JS:
    * none

}}
<!-- accessrules -->
<div class="access-rules">
{{#hasprofilerules}}
    <table class="profile-rules">
    {{#profilerules}}
        <tr valign="top">
            <td class="rule-source">
                {{name}}<br/>
                <span class="dimmed">{{shortname}}</span>
            </td>

            <td class="rule-op">
                {{operator}}
            </td>

            <td  class="rule-target">
                {{value}}
            </td>
        </tr>
    {{/profilerules}}
    </table>
{{/hasprofilerules}}

{{#hascapabilityrules}}
    <table class="capability-rules">
    {{#capabilityrules}}
        <tr valign="top">
            <td class="rule-source">
                {{name}}
                {{#shortname}}
                <br/><span class="dimmed">{{shortname}}</span>
                {{/shortname}}
            </td>

            <td class="rule-op">
                {{rulestr}}
            </td>

            <td class="rule-target">
                {{targetname}}
                {{#targetshortname}}
                <br/><span class="dimmed">{{targetshortname}}</span>
                {{/targetshortname}}
            </td>
        </tr>
    {{/capabilityrules}}
    </table>
{{/hascapabilityrules}}
</div>
<!-- /accessrules -->
