{{!
    @template mod_sharedresource/metadataeditform

    Classes required for JS:
    * none

}}
<!-- metadataeditform -->
<center>
<div id="mtd-form-container" align="center">

    <div align="center" id="mtd-form-title">
        {{metadatadescrstr}} {{pluginname}}
    </div>

    <!-- tabs -->
    {{> mod_sharedresource/tabs}}
    <!-- /tabs -->

    <div id="mtd-form-content" style="margin-right: auto; margin-left: auto">
        <div id="id-tab-99" class="on mtd-content">
            <div class="mtd-title-content">
                <h2>{{dmusestr}} {{pluginname}}</h2>
                <h3>{{dmdescriptionstr}}</h3>

                <fieldset>
                    <div style="text-align:justify;align=left;">
                        {{{standarddescriptionstr}}}
                    </div>
                </fieldset>

            </div>
        </div>

        <div style="margin-left: 67px;">
            <form id="id-mtd-form" action="{{{receiverurl}}}" method="post" class="mtd-form" autocomplete="off">
                <input type="hidden"  name="mode"  value="{{mode}}">
                <input type="hidden"  name="course"  value="{{course}}">
                <input type="hidden"  name="section"  value="{{section}}">
                <input type="hidden"  name="context"  value="{{sharingcontext}}">
                <input type="hidden"  name="add"  value="{{add}}">
                <input type="hidden"  name="return"  value="{{return}}">

                {{> mod_sharedresource/metadataeditpanel}}

                <div align="center" id="mtd-edit-form-submits">
                    <input type="submit" name="go-btn" value="{{validateformstr}}" id="id-mtd-submit"/>
                    <input type="submit" name="cancel" value="{{cancelformstr}}"  id="id-mtd-cancel" />
                </div>
            </form>
    </div>

</div>
</center>
<!-- /metadataeditform -->
