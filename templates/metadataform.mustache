{{!
    @template mod_sharedresource/metadataform

    Classes required for JS:
    * none

}}
<!-- metadataform -->
<legend>
    <b>&nbsp;{{pluginname}}</b>
</legend>

<br/>

<center>
<table border="1px" width="90%">
    <tr>
        <td colspan="4">
        </td>
    </tr>

    <tr>
        <td width="30%">
            <b>&nbsp;{{fieldnamestr}}</b>
        </td>

        <td class="mtdsetting">
            <b>{{systemstr}}</b><br/>
            <a href="#" id="id-system-mtd-selectall-write">{{selallstr}}</a> -
            <a href="#" id="id-system-mtd-selectnone-write">{{selnonestr}}</a> / 
            <a href="#" id="id-system-mtd-selectall-read">{{selallstr}}</a> -
            <a href="#" id="id-system-mtd-selectnone-read">{{selnonestr}}</a>
        </td>

        <td class="mtdsetting">
            <b>{{indexerstr}}</b><br/>
            <a href="#" id="id-indexer-mtd-selectall-write">{{selallstr}}</a> -
            <a href="#" id="id-indexer-mtd-selectnone-write">{{selnonestr}}</a> / 
            <a href="#" id="id-indexer-mtd-selectall-read">{{selallstr}}</a> -
            <a href="#" id="id-indexer-mtd-selectnone-read">{{selnonestr}}</a>
        </td>

        <td class="mtdsetting">
            <b>{{authorstr}}</b><br/>
            <a href="#" id="id-author-mtd-selectall-write">{{selallstr}}</a> -
            <a href="#" id="id-author-mtd-selectnone-write">{{selnonestr}}</a> /
            <a href="#" id="id-author-mtd-selectall-read">{{selallstr}}</a> -
            <a href="#" id="id-author-mtd-selectnone-read">{{selnonestr}}</a>
        </td>

        <td class="mtdsetting">
            <b>{{mandatorystr}}</b><br/>
            <a href="#" id="id-mandatory-mtd-selectall">{{selallstr}}</a> -
            <a href="#" id="id-mandatory-mtd-selectnone">{{selnonestr}}</a> /
        </td>

        <td class="mtdsetting">
            <b>{{widgetstr}}</b>
        </td>
    </tr>

{{#haschilds}}
    {{> mod_sharedresource/metadataformchilds}}
</table>
{{/haschilds}}

</center>
<!-- /metadataform -->
